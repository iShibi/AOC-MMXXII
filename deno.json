{
	"$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
	"tasks": {
		"d1p1": "deno run --allow-read=. src/day_1/part_1.ts",
		"d1p2": "deno run --allow-read=. src/day_1/part_2.ts",
		"d2p1": "deno run --allow-read=. src/day_2/part_1.ts",
		"d2p2": "deno run --allow-read=. src/day_2/part_2.ts",
		"d3p1": "deno run --allow-read=. src/day_3/part_1.ts",
		"d3p2": "deno run --allow-read=. src/day_3/part_2.ts"
	},
	"fmt": {
		"files": {
			"include": [
				"src/"
			]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 2,
			"singleQuote": true,
			"proseWrap": "preserve"
		}
	}
}
